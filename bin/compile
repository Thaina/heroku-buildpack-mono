apt-get update

BUILD_DIR=$1
CACHE_DIR=$2

echo "Cache Dir : ${CACHE_DIR}"
mkdir -p ${CACHE_DIR}

apt-get install python-software-properties
apt-add-repository "deb http://badgerports.org precise main"

apt-get update

echo "----Install Mono----"
apt-get -o Dir::Cache=${CACHE_DIR} install mono-complete mono-gmcs mono-gac mono-utils monodevelop monodoc-browser monodevelop-nunit monodevelop-versioncontrol

echo "----Install XSP----"
apt-get -o Dir::Cache=${CACHE_DIR} install mono-xsp2 mono-xsp2-base asp.net2-examples

xbuild /property:Configuration=Release ${SLN} | indent
